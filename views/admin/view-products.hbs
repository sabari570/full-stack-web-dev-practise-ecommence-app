{{>admin-header}}

<section class="view-products-table">

    <div class="row">
        <a class="add-product-btn" href="/admin/add-product">Add Products</a>
    </div>


    <div class="container">
        <div class="products-container">
            <table class="products-table">
                <tr class="products-table-heading">
                    <th>No</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>

                {{#each products}}
                <tr class="products-table-data">
                    <td>{{ inc @index }}</td> 
                    <td>{{ this.name }}</td>
                    <td>{{ this.category }}</td>
                    <td>{{ this.desc }}</td>
                    <td>{{ this.price }}</td>
                    <td><img class="product-table-image-thumbnail" src="/product-images/{{this._id}}.jpeg" alt=""></td>
                    <td>
                        <a href="/admin/edit-product/?id={{this._id}}" class="edit-btn">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="delete-btn" onclick="return confirm('Are you sure you want to delete {{ this.name }}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</section>