{{>user-header}}

<section class="view-orders-section">
    <div class="carts-container">
        <table class="carts-table">
            <tr class="carts-table-heading">
                <th>Date</th>
                <th>Address</th>
                <th>Pincode</th>
                <th>Mobile</th>
                <th>Amount</th>
                <th>Payment</th>
                <th>Status</th>
                <th class="visibilty-zero-field">Empty</th>
            </tr>

            {{#each orders}}
                <tr class="orders-table-data carts-table-data">
                    <td>{{ this.date }}</td>
                    <td>{{ this.deliveryDetails.address }}</td>
                    <td>{{ this.deliveryDetails.pincode }}</td>
                    <td>{{ this.deliveryDetails.mobile }}</td>
                    <td>{{ this.totalAmount }}</td>
                    <td>{{ this.paymentMethod }}</td>
                    <td>{{ this.status }}</td>
                    <td>
                        <div class="view-products-btn">
                            <a href="/view-order-products/{{ this._id }}" class="add-to-cart-btn">View Products</a>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
</section>