{{>user-header}}

<section class="place-order-section">
    <form action="#" class="delivery-form" id="checkout-form">
        <div class="place-order-row">
            <div class="delivery-details-col">
                <h2>Enter Delivery Details</h2>

                <label for="address" class="name-label">Address</label>
                <input type="text" name="address" class="delivery-input-fields"
                    placeholder="Enter your delivery address" required>

                <label for="pincode" class="email-label">Pincode</label>
                <input type="number" name="pincode" class="delivery-input-fields" placeholder="Enter pincode" required>

                <label for="mobile" class="password-label">Mobile</label>
                <input type="text" name="mobile" class="delivery-input-fields" placeholder="Enter your mobile number"
                    required>
                <input type="text" name="userId" value="{{ user._id }}" hidden>

            </div>

            <div class="checkout-col">
                <div class="payment-method-sub-container">
                    <h5>Total Amount: <span id="total-amt">Rs. {{ this.totalAmount }}.00</span></h5>
                    <hr>
                    <div class="payment">
                        <p>Payment method:</p>
                        <label for="" class="radio-inline">
                            <input type="radio" name="payment-method" value="COD" checked>COD
                        </label>
                        <label for="" class="radio-inline">
                            <input type="radio" name="payment-method" value="ONLINE">Online Payment
                        </label>
                    </div>
                    <button type="submit" class="add-to-cart-btn checkout-btn">Checkout</button>
                </div>
            </div>
        </div>
    </form>
</section>